                <%= link_to "Log out", {:controller => 'sessions', :action => 'destroy'} %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", {:controller => 'sessions', :action => 'new'} %></li>
        <% end %>
      </ul>
    </nav>
  </div>
